{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./packages",
    "noImplicitAny": true,
    "pretty": true,
    "declaration": true,
    "lib": ["esnext", "dom"]
  },
  "exclude": ["node_modules"]
}
